<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextDayId" parent="Theme.SuggesticChallenge">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_heavy</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSubTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMessage">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>